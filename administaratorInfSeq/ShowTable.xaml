<Page x:Class="administaratorInfSeq.ShowTable"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:administaratorInfSeq"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ShowTable">

    <Grid>
        <StackPanel>
            <StackPanel.Resources>
                <Style TargetType="Image">
                    <Setter Property="Cursor" Value="Hand"/>
                </Style>
            </StackPanel.Resources>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" HorizontalAlignment="Left">
                    <Image Name="img_back" Source="resources\back.png" Width="40" Height="40" MouseLeftButtonDown="Img_back_MouseLeftButtonDown"/>
                </Grid>
            </Grid>
            <FlowDocumentScrollViewer  HorizontalAlignment="Center" ScrollViewer.VerticalScrollBarVisibility="Auto" MaxHeight="730">
                <FlowDocument Name="TableShowler">
            </FlowDocument>
        </FlowDocumentScrollViewer>
        </StackPanel>
    </Grid>
</Page>
